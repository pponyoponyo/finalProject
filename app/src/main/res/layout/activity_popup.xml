<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/txtNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:scrollbars="vertical"
        android:text="의심이 가는 url을 어플로 '공유'하거나 어플에 '직접 작성'하여 판단해보세요!"
        android:textColor="@color/colorBlack"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/cbRepeat"
        android:layout_width="195dp"
        android:layout_height="100dp"
        android:layout_below="@+id/txtNotice"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="50dp"
        android:text=" 다시 보지 않기"
        android:textColor="@color/colorBlack"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/txtNotice"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@+id/cbRepeat"
        android:text="확인"
        android:background="@drawable/btncorner"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />

</RelativeLayout>